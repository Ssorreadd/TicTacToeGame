<Window x:Class="TicTacToe.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d" Opacity="0" IsVisibleChanged="Window_IsVisibleChanged"
        Title="StartWindow" Height="350" Width="800" ResizeMode="NoResize" Icon="Resources/tic logo.ico" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="503*"/>
            <ColumnDefinition Width="297*"/>
        </Grid.ColumnDefinitions>

        <Image Source="Resources/tic_logo_trnsp.png" HorizontalAlignment="Left"  Grid.Column="1" Margin="-10 30 30 30"/>
        <TextBlock Text="Tic Tac Toe" VerticalAlignment="Center" FontSize="80" />
        <TextBlock Text="alpha v.0.9" VerticalAlignment="Bottom" FontSize="12" HorizontalAlignment="Left" Margin="10" Foreground="DimGray"/>

    </Grid>
</Window>
